                             Width="600"
                             Margin="300,30"
                             BorderThickness="0"
                             Foreground="OrangeRed"
                             BorderBrush="OrangeRed"
                             Background="Transparent"
                             Style="{StaticResource Enemy_Hp_ProgressBar}"
                             >
                </ProgressBar>
                <ProgressBar x:Name="PlayerMp" Value="{Binding Mp, Mode=TwoWay}" 
                             Maximum="{Binding MaxMp}"
