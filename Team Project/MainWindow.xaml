                        Margin="20,3733"/>
                <Border Width="229"
                        Height="4000"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        x:Name="FUCKBORDERLEFT"
                        Margin="0,0"
                        />
                <Border Width="238"
                        Height="4000"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        x:Name="FUCKBORDERRIGHT"
                        Margin="3752,0"/>
                <Border Width="3980"
                        Height="257"
                        Background="Transparent"
                         BorderBrush="Transparent"
                        BorderThickness="0"
