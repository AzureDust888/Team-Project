                            Style="{StaticResource Launcher_Button_Style}"/>
                </StackPanel>
                <!--<Label x:Name="lab" Height="50" Width="200" Foreground="White" ></Label>-->

            </Canvas>
        </Border>

    </Canvas>
</Window>
