<Window x:Class="Team_Project.Launcher"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:local="clr-namespace:Team_Project"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        mc:Ignorable="d"
        Title="Launcher" Height="600" Width="850"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        Loaded="Window_Loaded">
    <Canvas x:Name="MainCanvas">
        <Border x:Name="Launcher_Main_Border" CornerRadius="20"
                Background="Black"
                Height="600" Width="850"
                MouseLeftButtonDown="Launcher_Main_Border_MouseLeftButtonDown">

        </Border>
        <fa:ImageAwesome Icon="Close"
                         Foreground="#cdd9e5"
                         Width="30"
                         Height="30"
                         Margin="810,10"
                         MouseLeftButtonUp="ImageAwesome_MouseLeftButtonUp">
        </fa:ImageAwesome>

        <Image Width="500"
               Height="600"
               x:Name="SpawnCampFire"
               Margin="0,-20"
               gif:ImageBehavior.AnimatedSource="Resources/R.gif"
               >
        </Image>

        <Border Width="300"
                Height="500"
                Margin="500,50"
                Background="#2d333b"
                CornerRadius="7">
            <Canvas Width="300" Height="500"
                    >

                <Button Height="50"
                        Width="250"
                        Margin="25,65"
                        Content="Play"
                        Background="#22272e"
                        x:Name="Play_Button"
                        GotMouseCapture="Play_Button_GotMouseCapture"
                        Style="{StaticResource Launcher_Button_Style}">
                </Button>


                <Button Height="50"
                        Width="250"
                        Margin="25,145"
                        Content="Github"
                        x:Name="Github_Source_Code_Button"
                        Background="#22272e"
                        GotMouseCapture="Github_Source_Code_Button_GotMouseCapture"
                        Style="{StaticResource Launcher_Button_Style}">
                </Button>

                <Button Height="50"
                        Width="250"
                        Margin="25,225"
                        Content="Tutorial"
                        Background="#22272e"
                        x:Name="Tutorial_Button"
                        GotMouseCapture="Tutorial_Button_GotMouseCapture"
                        Style="{StaticResource Launcher_Button_Style}">
                </Button>

                <Button Height="50"
                        Width="250"
                        Margin="25,305"
                        Content="Settings"
                        Background="#22272e"
                        x:Name="Setting_Button"
                        GotMouseCapture="Setting_Button_GotMouseCapture"
                        Style="{StaticResource Launcher_Button_Style}">
                </Button>

                <Button Height="50"
                        Width="250"
                        Margin="25,385"
                        Content="Exit"
                        Background="#22272e"
                        x:Name="Exit_Button"
                        GotMouseCapture="Exit_Button_GotMouseCapture"
                        Style="{StaticResource Launcher_Button_Style}">
                </Button>
            </Canvas>
        </Border>

        <Border Width="50"
                Height="50"
                BorderThickness="2"
                BorderBrush="#2d333b"
                CornerRadius="100"
                Margin="10"
                MouseLeftButtonDown="CurrentUserAvatarBorder_MouseLeftButtonDown"
                x:Name="CurrentUserAvatarBorder">
            <Canvas x:Name="PlayerAccountCanvas" Width="225">
                <Label Content="User Name"
                       Width="150"
                       Height="50"
                       HorizontalContentAlignment="Left"
                       VerticalContentAlignment="Center"
                       Foreground="Aquamarine"
                       FontSize="20"
                       x:Name="CurrentUserNameLabel"
                       Margin="55,-2.5"></Label>
            </Canvas>
        </Border>
        <Border CornerRadius="20"
                Background="Black"
                Height="600" Width="850"
                x:Name="Loading_Border"
                MouseLeftButtonDown="Loading_Border_MouseLeftButtonDown" d:IsHidden="True">
            <Canvas>
                <fa:ImageAwesome Icon="Spinner" Foreground="Aquamarine"
                             Width="200"
                             Height="200"
                             Spin="True"
                             SpinDuration="2"
                             x:Name="SpinnerLoad"
                             Margin="325,200"
                             ></fa:ImageAwesome>
                <Label Content="Authorization..."
                       FontSize="40"
                       Foreground="Aquamarine" Canvas.Left="287" Canvas.Top="426"/>
            </Canvas>

        </Border>
        
    </Canvas>
</Window>
